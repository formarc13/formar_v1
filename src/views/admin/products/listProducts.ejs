<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
<body>
  <%- include('../partials/header') %> 
  
      <main class="container min-vh-100 pt-5">
        <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Categor√≠a</th>
                <th scope="col">Emprendimiento</th>
                <th scope="col">Stock</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% productos.forEach(producto => { %>
                <tr>
                  <th scope="row"><%- producto.id %></th>
                  <td><%- producto.name %></td>
                  <td><%- producto.price %></td>
                  <td><%- producto.categoryId %></td>
                  <td><%- producto.projectId %></td>
                  <td><%- producto.stock %></td>
                  <td>
                    <a href="/admin/productos/editar/<%- producto.id %>" class="btn btn-success">
                      <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <form action="/admin/productos/eliminar/<%- producto.id %>?_method=DELETE" method="post">
                      <button class="btn btn-danger" type="submit">
                        <i class="fa-solid fa-trash-can"></i>
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>  
            </tbody>
          </table>
      </main>

      <%- include('../partials/footer') %> 
      
      <%- include('../partials/scripts') %> 

</body>
</html>