<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')  %> 
<body>
    <%- include('../partials/header')  %> 
    
    <main class="products__main container">
        <h1 class="text-center mb-2">Productos de emprendedorxs</h1>
        <div class="products__filters--container row p-5" >
            <div class="products__filter--select col-md-6">
                <select class="form-select" name="category" id="category">
                    <option value="">Categor√≠as</option>
                </select>
            </div>
            <div class="products__filter--select col-md-6">
                <select class="form-select" name="project" id="project">
                    <option value="">Emprendimiento</option>
                </select>
            </div>
        </div>
        <div class="row">
            <% products.forEach(product => { %>
                <div class="product__card--container col-md-6 col-lg-4">
                    <article class="products__card ">
                        <% if (product.discount > 0) { %>
                            <span class="products__card--discount"><%= product.discount %> %</span>
                        <% } %>
                        <a href="/productos/detalle/<%= product.id %>">
                            <div class="card__image--container">
                                <img src="images/<%= product.image %>" alt="">
                            </div>
                            <p class="card__name"><%= product.name %> </p>
                            <div class="card__price">
                                <% if (product.discount > 0) { %>
                                    <span class="card__priceSale--original">$ <%= product.price %> </span>$ <%= product.price - product.discount * product.price / 100 %>
                                <% } else { %>
                                $ <%= product.price %> 
                                <% } %>
                            </div>
                            <p class="card__description"><%= product.description %></p>
                        </a>
                        <div class="products__card--buttonsContainer">
                            <button class="btn btn-outline-secondary">Detalle</button>
                            <button class="btn btn-outline-primary">Agregar al carrito</button>
                        </div>
                    </article>
                </div>
            <% }) %>
        </div>
    </main>
    
    <%- include('../partials/footer')  %> 
    <%- include('../partials/scripts')  %> 
</body>
</html>