<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

      <main class="productDetail__main container">
        <section class="productDetail__product row">
          <div class="productDetail__images--container col-md-8">
            <!-- Full-width images with number text -->
            <div class="mySlides">
              <img src="/images/products/<%= producto.image %>" />
            </div>
            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
            <!-- Thumbnail images -->
            <div class="productDetail__images--row">
              <div class="column">
                <img class="demo cursor" src="/images/products/<%= producto.image %>" style="width: 100%"
                  onclick="currentSlide(1)" alt="The Woods" />
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="productDetail__info--container">
              <h2 class="productDetail__name">
                <%= producto.name %>
              </h2>
            
            <% if (producto.discount> 0) { %>
              <p class="productDetail__price">$ <%= producto.price %></p>
                  <p class="productDetail__price--withDiscount">
                    $ <%= producto.price - (producto.price * producto.discount / 100) %>
                  </p>
                  <p class="productDetail__discount">
                    <%= producto.discount %> %
                  </p>
                  <% } else { %>
                    <p class="productDetail__price">$ <%= producto.price %></p>
                        <% } %>
                            <h3>Descripci√≥n</h3>
                            <p>
                              <%= producto.description %>
                            </p>
                          <div class="d-flex justify-content-evenly">
                            <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                              <input type="checkbox" class="btn-check" id="btncheck1" autocomplete="off" />
                              <label class="btn btn-outline-primary" for="btncheck1">-</label>

                              <input type="checkbox" class="btn-check" id="btncheck2" autocomplete="off" />
                              <label class="btn btn-outline-primary" for="btncheck2">1</label>

                              <input type="checkbox" class="btn-check" id="btncheck3" autocomplete="off" />
                              <label class="btn btn-outline-primary" for="btncheck3">+</label>
                            </div>
                            <div class="btn-container">
                              <button class="btn btn-primary">Agregar al carrito</button>
                            </div>
                          </div>
                    </div>
                  </div>
                </div>
        </section>
      </main>
      <script src="/js/productDetail.js"></script>
      <%- include('../partials/footer') %>
        <%- include('../partials/scripts') %>
  </body>

</html>