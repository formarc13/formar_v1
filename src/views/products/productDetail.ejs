<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>

    <main class="productDetail__main container">
      <section class="productDetail__product row">
        <div class="productDetail__images--container col-md-6">
          <!-- Full-width images with number text -->
          <div class="mySlides">
            <div class="numbertext">1 / 6</div>
            <img src="/images/products/<%= product.image %>" style="width: 100%" />
          </div>
          <!-- Next and previous buttons -->
          <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
          <a class="next" onclick="plusSlides(1)">&#10095;</a>

          <!-- Image text -->
          <div class="caption-container">
            <p id="caption"></p>
          </div>

          <!-- Thumbnail images -->
          <div class="productDetail__images--row">
            <div class="column">
              <img
                class="demo cursor"
                src="/images/products/<%= product.image %>"
                style="width: 100%"
                onclick="currentSlide(1)"
                alt="The Woods"
              />
            </div>
          </div>
        </div>
        <div class="productDetail__info--container"></div>
      </section>
    </main>
    <script src="/js/productDetail.js"></script>
    <%- include('../partials/footer') %> <%- include('../partials/scripts') %>
  </body>
</html>
